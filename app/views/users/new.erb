<div class="container">
  <% if @errors %>
    <% @errors.each do |error| %>
      <p style='color: red'><%= error%></p>
    <% end %>
  <% end %>
  <h2 style="margin-bottom:3%;">Register!</h2>

  <form method="post" action="/users">
    <div class="form-group">
      <label for="username">Username:</label>
      <input class="form-control" name="user[username]" type="text">
    </div>
    <div class="form-group">
      <label for="password">Password:</label>
      <input class="form-control" name="user[password]" type="password">
    </div>
    <input class="btn btn-info" type="submit" value="Create Account!" class="button">
  </form>
</div>
